@page "/hoadonlist"
﻿@using System.Net.Http.Json
@using MudBlazor.Extensions
@*@using Examples.Data.Models*@
@inject HttpClient httpClient
@inject ISnackbar Snackbar

<MudTable Items="@HoaDons" Dense="@dense" Hover="@hover" Bordered="@bordered" Striped="@striped" Filter="new Func<HoaDon,bool>(FilterFunc1)" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Danh Sách Loại Sản Phẩm</MudText>
        @*<MudSpacer />*@
        <div class="flex-grow-1"></div>
        <MudTextField @bind-Value="searchString1" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Mã Hóa Đơn</MudTh>
        <MudTh>Mã Khách Hàng</MudTh>
        <MudTh>Mã Quản Trị</MudTh>
        <MudTh>Ngày Đặt</MudTh>
        <MudTh>Tổng Tiền</MudTh>
        <MudTh>Trạng Thái</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Maloai">@context.Mahoadon</MudTd>
        <MudTd DataLabel="Tenloai">@context.Makhachhang</MudTd>
        <MudTd DataLabel="Tenloai">@context.Nguoiquantri</MudTd>
        <MudTd DataLabel="Tenloai">@context.Ngaydat</MudTd>
        <MudTd DataLabel="Tenloai">@context.Tongtien</MudTd>
        <MudTd DataLabel="Tenloai">@context.Trangthai</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

<div class="d-flex flex-wrap mt-4">
    <MudSwitch @bind-Checked="@hover" Color="Color.Primary">Hover</MudSwitch>
    <MudSwitch @bind-Checked="@dense" Color="Color.Secondary">Dense</MudSwitch>
    <MudSwitch @bind-Checked="@striped" Color="Color.Tertiary">Striped</MudSwitch>
    <MudSwitch @bind-Checked="@bordered" Color="Color.Warning">Bordered</MudSwitch>
    @*<MudSpacer />*@
    <div style="min-width:200px;">
        <MudText Inline="true" Class="align-self-center">Mã Loại: @selectedItem1?.Mahoadon</MudText>
        <MudText Inline="true" Class="align-self-center">Tên Loại: @selectedItem2?.Makhachhang</MudText>
    </div>
    <div style="min-width:200px;">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.CreateNewFolder" Color="Color.Success" Class="m-2"><a href="/HoaDonDialog">Create</a></MudButton>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Edit" Color="Color.Info" Size="Size.Small" Class="m-2"><a href="/HoaDonDialog/@selectedItem1?.Mahoadon">Edit</a></MudButton>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Details" Color="Color.Info" Size="Size.Small" Class="m-2"><a href="/HoaDonDetail/@selectedItem1?.Mahoadon">Detail</a></MudButton>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error" Class="m-2" Link="/LoaiSanPhamList">Delete</MudButton>
    </div>
</div>

